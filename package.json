{
  "private": true,
  "name": "onejs.org",
  "version": "0.0.0",
  "author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
  "repository": {
    "type": "git",
    "url": "git://github.com/medikoo/onejs.org.git"
  },
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "builtins": "^1.0.3",
    "compression": "^1.6.2",
    "connect": "^3.6",
    "debug": "^2.6.3",
    "deferred": "^0.7.6",
    "dom-ext": "0.1",
    "domino": "^1.0.28",
    "domjs": "^0.3.2",
    "domjs-site-tree": "^1.0.1",
    "es5-ext": "^0.10.14",
    "fs2": "^0.2.4",
    "highlight.js": "^9.10",
    "html-dom-event-ext": "^0.3.2",
    "html-dom-ext": "0.1",
    "markdown-it": "^8.3.1",
    "memoizee": "^0.4.4",
    "next-tick": "1",
    "parseurl": "^1.3.1",
    "querystring2": "1",
    "request": "^2.81",
    "serve-favicon": "^2.4.1",
    "site-tree-router": "^2.2",
    "st": "^1.2",
    "url3": "1",
    "tar-pack": "^3.4",
    "timers-ext": "^0.1.2",
    "webmake": "^0.3.43",
    "webmake-middleware": "^0.1.2"
  },
  "devDependences": {
    "eslint": "^3.18"
  },
  "eslintConfig": {
    "extends": "eslint:all",
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
        "commonjs": true,
        "es6": true
    },
    "rules": {
      "capitalized-comments": ["error", "always", { "ignoreConsecutiveComments": true }],
      "comma-style": ["error", "last", { "exceptions": { "VariableDeclaration": true } }],
      "curly": ["error", "multi-line"],
      "dot-location": ["error", "property"],
      "func-names": ["error", "never"],
      "global-require": "off",
      "id-length": ["error", { "exceptions": ["e"] } ],
      "indent": ["error", "tab"],
      "init-declarations": "off",
      "line-comment-position": "off",
      "max-len": ["error", 100],
      "max-params": "off",
      "max-statements": ["error", 20, { "ignoreTopLevelFunctions": true }],
      "multiline-ternary": "off",
      "newline-before-return": "off",
      "no-empty": ["error", { "allowEmptyCatch": true }],
      "no-extra-parens": ["error", "all", { "nestedBinaryExpressions": false }],
      "no-inline-comments": "off",
      "no-magic-numbers": ["error", { "ignore": [-1, 0, 1] }],
      "no-mixed-requires": "off",
      "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
      "no-multi-assign": "off",
      "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true } }],
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "no-process-env": "off",
      "no-return-assign": "off",
      "no-shadow": ["error", { "builtinGlobals": true }],
      "no-tabs": "off",
      "no-ternary": "off",
      "no-undef": ["error", { "typeof": false }],
      "no-underscore-dangle": "off",
      "no-var": "off",
      "no-warning-comments": ["error", { "terms": ["fixme", "xxx"], "location": "start" }],
      "object-property-newline": ["error", { "allowMultiplePropertiesPerLine": true }],
      "object-curly-spacing": ["error", "always"],
      "one-var": "off",
      "one-var-declaration-per-line": "off",
      "padded-blocks": "off",
      "quote-props": ["error", "consistent-as-needed"],
      "sort-keys": "off",
      "sort-vars": "off",
      "template-curly-spacing": ["error", "always"],
      "vars-on-top": "off"
    }
  },
  "scripts": {
    "lint": "eslint --ignore-path=.gitignore .",
    "setup": "node server/scripts/setup.js",
    "start": "node server/scripts/setup.js && node server/processes/master.js"
  },
  "license": "MIT"
}
